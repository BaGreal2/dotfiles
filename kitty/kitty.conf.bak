# include themes/rose-pine.conf
# include themes/nord.conf
# include themes/kanagawabones.conf
include themes/alabaster.conf

# FONTS
# ------------ IOSEVKA ------------
font_size 17.0
# font_family      Iosevka Regular
# bold_font        Iosevka SemiBold
# italic_font      Iosevka Light
# bold_italic_font Iosevka SemiBold
# ------------ FIRA CODE ------------
# font_size 15.0
# font_family      Fira Code Regular
# bold_font        Fira Code SemiBold
# italic_font      Fira Code Light
# bold_italic_font Fira Code SemiBold
# adjust_column_width -1
# ------------ TERMINUS ------------
# font_size 18.0
# font_family      TerminusTTF
# bold_font        TerminusTTF-Bold
# italic_font      TerminusTTF-Italic
# bold_italic_font TerminusTTF-Bold

# CURSOR
cursor_shape block
shell_integration enabled no-cursor

# BACKGROUND
background_opacity 0.925
background_blur 20

# ENVIRONMENT
env TERM = "xterm-256color"

# MACOS
macos_option_as_alt yes
macos_quit_when_last_window_closed yes
map ctrl+cmd+f toggle_fullscreen 
hide_window_decorations titlebar-and-corners

# TAB BAR
tab_bar_edge top

# WINDOW
remember_window_size  no
initial_window_width  800
initial_window_height 500
# top, horizontal, bottom
# window_padding_width 20 5 5
# window_padding_width 4
window_padding_width 4 4 0


cursor_trail 1


# BEGIN_KITTY_FONTS
font_family      family="Andale Mono"
bold_font        auto
italic_font      auto
bold_italic_font auto
# END_KITTY_FONTS